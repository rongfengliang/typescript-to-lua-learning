{
 "$schema": "https://raw.githubusercontent.com/TypeScriptToLua/vscode-typescript-to-lua/master/tsconfig-schema.json",
  "include": [
    "src/*"
   ],
  "compilerOptions": {
    "outDir": "./dist",
    "target":"ESNext",
    "lib": ["esnext","DOM"],
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": false,
    "strict": true
  },
  "tstl": {
    "noHeader": true,
    "noImplicitSelf":true,
    "buildMode": "library",
    "luaTarget": "JIT"
  }
}